@using SocialNetwork.Core.Application.ViewModels.Game
@model BoardViewModel

@{
    ViewData["Title"] = "Seleccionar Posición";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h5>Selecciona la celda inicial para el barco de @Model.ShipSize posiciones</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Instrucciones:</strong> Haz clic en una celda libre (gris) para elegir donde iniciar el barco.
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered text-center" style="width: auto; margin: 0 auto;">
                            <thead>
                                <tr>
                                    <th></th>
                                    @for (int col = 0; col < 12; col++)
                                    {
                                        <th>@col</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (int row = 0; row < 12; row++)
                                {
                                    <tr>
                                        <th>@row</th>
                                        @for (int col = 0; col < 12; col++)
                                        {
                                            var cell = Model.Board[row, col];
                                            if (cell.IsOccupied)
                                            {
                                                <td style="width: 40px; height: 40px; background-color: #6c757d;">
                                                    <span class="text-white">X</span>
                                                </td>
                                            }
                                            else
                                            {
                                                <td style="width: 40px; height: 40px; background-color: #e9ecef;">
                                                    <a asp-controller="Game" asp-action="SelectDirection" asp-route-gameId="@Model.GameId" asp-route-shipSize="@Model.ShipSize" asp-route-row="@row" asp-route-column="@col" class="btn btn-sm btn-outline-primary p-1" style="width: 100%; height: 100%;"></a>
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4">
                        <h6>Leyenda:</h6>
                        <ul class="list-unstyled">
                            <li><span class="badge" style="background-color: #e9ecef; color: #000;">Gris</span> - Celda libre (haz clic para seleccionar)</li>
                            <li><span class="badge" style="background-color: #6c757d;">X</span> - Celda ocupada por otro barco</li>
                        </ul>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Game" asp-action="SelectShip" asp-route-id="@Model.GameId" class="btn btn-secondary">Volver a Selección de Barcos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
