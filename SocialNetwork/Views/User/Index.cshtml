@using SocialNetwork.Core.Application.ViewModels.User
@model EditProfileViewModel

@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center"><h4>Mi Perfil</h4></div>
                <div class="card-body">

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @ViewBag.Success
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> @ViewBag.Error
                            @if (ViewBag.Errors != null)
                            {
                                <ul class="mb-0 mt-2">
                                    @foreach (var error in ViewBag.Errors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            }
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Index" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-semibold">Nombre</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-semibold">Apellido</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">Correo Electrónico</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UserName" class="form-label fw-semibold">Nombre de Usuario</label>
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">Teléfono</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Profile" class="form-label fw-semibold">Foto de Perfil</label>
                            <input asp-for="Profile" class="form-control" type="file" accept="image/*" />
                            <small class="text-muted">Deja en blanco si no deseas cambiar tu foto</small>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3">Cambiar Contraseña (Opcional)</h5>
                        <p class="text-muted small">Deja estos campos en blanco si no deseas cambiar tu contraseña</p>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">Nueva Contraseña</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Volver al Inicio</a>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

