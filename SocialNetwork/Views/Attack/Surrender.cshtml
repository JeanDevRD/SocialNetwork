@using SocialNetwork.Core.Application.ViewModels.Game
@model SurrenderViewModel

@{
    ViewData["Title"] = "Rendirse";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h5>Rendirse</h5>
                </div>
                <div class="card-body text-center">

                    <div class="alert alert-warning">
                        <h5>¿Está seguro que desea rendirse?</h5>
                        <p class="mb-0">Si te rindes, <strong>@Model.OpponentUsername</strong> ganará la partida</p>
                    </div>

                    <p class="text-muted">Esta acción no se puede deshacer</p>

                    <form asp-controller="Attack" asp-action="ConfirmSurrender" method="post">
                        <input type="hidden" name="gameId" value="@Model.GameId" />

                        <div class="d-flex justify-content-center gap-2 mt-4">
                            <a asp-controller="Attack" asp-action="Attack" asp-route-id="@Model.GameId" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Confirmar rendición</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>