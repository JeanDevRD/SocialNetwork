@using SocialNetwork.Core.Application.ViewModels.Attack
@model AttackBoardViewModel

@{
    ViewData["Title"] = "Tablero de Ataque";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white text-center">
                    <h5>Tablero de Ataque - @Model.OpponentUsername</h5>
                </div>
                <div class="card-body">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.IsMyTurn)
                    {
                        <div class="alert alert-success">
                            <strong>Es tu turno de atacar</strong> - Selecciona una celda
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <strong>Es turno de @Model.OpponentUsername</strong> - Espera tu turno
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th></th>
                                    @for (int col = 0; col < 12; col++)
                                    {
                                        <th>@col</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @for (int row = 0; row < 12; row++)
                                {
                                    <tr>
                                        <th>@row</th>
                                        @for (int col = 0; col < 12; col++)
                                        {
                                            var cell = Model.Board[row, col];

                                            @if (cell.Status == AttackStatus.NotAttacked)
                                            {
                                                @if (Model.IsMyTurn)
                                                {
                                                    <td class="bg-light">
                                                        <form asp-controller="Attack" asp-action="PerformAttack" method="post" class="d-inline">
                                                            <input type="hidden" name="gameId" value="@Model.GameId" />
                                                            <input type="hidden" name="row" value="@row" />
                                                            <input type="hidden" name="column" value="@col" />
                                                            <button type="submit" class="btn btn-sm btn-outline-primary">?</button>
                                                        </form>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td class="bg-light">?</td>
                                                }
                                            }
                                            else if (cell.Status == AttackStatus.Hit)
                                            {
                                                <td class="bg-danger text-white">X</td>
                                            }
                                            else
                                            {
                                                <td class="bg-success text-white">O</td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <ul class="list-unstyled">
                            <li><span class="badge bg-light text-dark">?</span> - No atacado</li>
                            <li><span class="badge bg-danger">X</span> - Impacto </li>
                            <li><span class="badge bg-success">O</span> - Agua </li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a asp-controller="Game" asp-action="Index" class="btn btn-secondary">Volver</a>
                            <a asp-controller="Attack" asp-action="ViewMyBoard" asp-route-id="@Model.GameId" class="btn btn-info">Ver mi tablero</a>
                        </div>
                        <div>
                            <form asp-controller="Attack" asp-action="Attack" asp-route-id="@Model.GameId" method="get" class="d-inline">
                                <button type="submit" class="btn btn-warning">Refrescar</button>
                            </form>
                            <a asp-controller="Attack" asp-action="Surrender" asp-route-id="@Model.GameId" class="btn btn-danger">Rendirse</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>