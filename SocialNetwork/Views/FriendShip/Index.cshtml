@using SocialNetwork.Core.Application.ViewModels.FriendShip
@model FriendsIndexViewModel

@{
    ViewData["Title"] = "Mis Amigos";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-lg-4 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white"><h5 class="mb-0">Mis Amigos (@Model.Friends.Count)</h5></div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (Model.Friends.Count == 0)
                    {
                        <p class="text-muted text-center">Aún no tienes amigos</p>
                        <a asp-controller="FriendRequest" asp-action="Create" class="btn btn-sm btn-primary w-100">Buscar Amigos</a>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var friend in Model.Friends)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex align-items-center">
                                        <img src="~/@friend.Profile" alt="@friend.Username" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">@friend.Username</h6>
                                            <small class="text-muted">@friend.FirstName @friend.LastName</small>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <a asp-controller="FriendShip" asp-action="UserPosts" asp-route-userId="@friend.Id" class="btn btn-sm btn-outline-primary me-2">Ver Posts</a>
                                        <a asp-controller="FriendShip" asp-action="Delete" asp-route-id="@friend.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-white"><h5 class="mb-0">Publicaciones de Amigos</h5></div>
            </div>

            @if (Model.FriendPosts.Count == 0)
            {
                <div class="alert alert-info text-center"><p class="mb-0">No hay publicaciones de tus amigos</p></div>
            }

            @foreach (var post in Model.FriendPosts)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white">
                        <div class="d-flex align-items-center">
                            <img src="~/@post.AuthorProfile" alt="@post.AuthorName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                            <div>
                                <h6 class="mb-0">
                                    <a asp-controller="FriendShip" asp-action="UserPosts" asp-route-userId="@post.AuthorId" class="text-decoration-none">@post.AuthorName</a>
                                </h6>
                                <small class="text-muted">@post.Created.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <p class="card-text">@post.Content</p>

                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="~/@post.ImageUrl" alt="Imagen de publicación" class="img-fluid rounded mb-3" style="max-height: 500px; width: 100%; object-fit: cover;" />
                        }

                        @if (!string.IsNullOrEmpty(post.VideoUrl))
                        {
                            var videoId = post.VideoUrl.Contains("watch?v=") ? post.VideoUrl.Split("watch?v=")[1].Split("&")[0] : post.VideoUrl.Split("/").Last();
                            <div class="ratio ratio-16x9 mb-3">
                                <iframe src="https://www.youtube.com/embed/@videoId" allowfullscreen></iframe>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
