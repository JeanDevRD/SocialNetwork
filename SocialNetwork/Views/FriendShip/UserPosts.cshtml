@using SocialNetwork.Core.Application.ViewModels.FriendShip
@model UserPostsViewModel

@{
    ViewData["Title"] = $"Publicaciones de {Model.UserName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <img src="~/@Model.UserProfile" alt="@Model.UserName" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" />
                    <h4>@Model.UserName</h4>
                    <p class="text-muted">@Model.Posts.Count publicaciones</p>
                    <a asp-controller="FriendShip" asp-action="Index" class="btn btn-sm btn-outline-secondary">Volver a Amigos</a>
                </div>
            </div>

            @if (Model.Posts.Count == 0)
            {
                <div class="alert alert-info text-center"><p class="mb-0">Este usuario no tiene publicaciones</p></div>
            }

            @foreach (var post in Model.Posts)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-white">
                        <div class="d-flex align-items-center">
                            <img src="~/@post.AuthorProfile" alt="@post.AuthorName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                            <div>
                                <h6 class="mb-0">@post.AuthorName</h6>
                                <small class="text-muted">@post.Created.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <p class="card-text">@post.Content</p>

                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="~/@post.ImageUrl" alt="Imagen de publicación" class="img-fluid rounded mb-3" style="max-height: 500px; width: 100%; object-fit: cover;" />
                        }

                        @if (!string.IsNullOrEmpty(post.VideoUrl))
                        {
                            var videoId = post.VideoUrl.Contains("watch?v=") ? post.VideoUrl.Split("watch?v=")[1].Split("&")[0] : post.VideoUrl.Split("/").Last();
                            <div class="ratio ratio-16x9 mb-3">
                                <iframe src="https://www.youtube.com/embed/@videoId" allowfullscreen></iframe>
                            </div>
                        }

                    </div>
                </div>
            }
        </div>
    </div>
</div>
