@using SocialNetwork.Core.Application.ViewModels.User
@model ForgotPasswordRequestViewModel
@{
    ViewData["Title"] = "Forgot password";
    Layout = "_LayoutAnonymous";
}

<div class="col-12 col-md-6 offset-md-3 mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-light">
            <h5 class="text-center m-0">Recuperar contraseña</h5>
        </div>

        <div class="card-body">

            @if (ViewBag.HasError != null && ViewBag.HasError)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Error:</strong>
                    @foreach (var error in ViewBag.Errors)
                    {
                        <p class="m-0">@error</p>
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-controller="Login" asp-action="ForgotPassword" method="POST">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-semibold">Nombre de usuario</label>
                    <input class="form-control" asp-for="UserName" placeholder="Escribe tu usuario" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-short"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-success">
                        Enviar <i class="bi bi-send"></i>
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
