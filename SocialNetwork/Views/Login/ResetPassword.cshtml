@using SocialNetwork.Core.Application.ViewModels.User
@model ResetPasswordRequestViewModel
@{
    ViewData["Title"] = "Reset password";
    Layout = "_LayoutAnonymous";
}

<div class="col-12 col-md-6 offset-md-3 mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h5>Reset Password</h5>
        </div>

        <div class="card-body">
            @if (ViewBag.HasError != null && ViewBag.HasError)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <p class="mb-0">@error</p>
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            }

            <form asp-controller="Login" asp-action="ResetPassword" method="POST">

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end">
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary me-2">
                        Back
                    </a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>

            </form>
        </div>
    </div>
</div>
